<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../styles/global.scss" />
    <title>Sign in</title>
  </head>
  <body class="padding flex-center">
    <main style="width:90%; max-width: 340px;">
      {{#> modal/modal class="modal"}}
      {{> title/title text="Вход" style="margin:0 0 40px 0" }}
      {{#> wrapper/wrapper class="full-width" style="margin:0 0 159px 0" }}
      {{#> field/field class="full-width field" }}
      {{> label/label text="Логин" for="login" class="label" }}
      {{> input/input type="text" id="login" class="input" }}
      {{/field/field}}
      {{#> field/field class="full-width field" }}
      {{> label/label text="Пароль" for="password" class="label" }}
      {{> input/input type="password" id="password" class="input" }}
      {{/field/field}}
      {{/wrapper/wrapper}}
      {{> button/button type="submit" text="Авторизоваться" class="full-width button" style="margin:0 0 14px 0" }}
      {{> link/link href="/src/pages/sign_up.hbs" text="Нет аккаунта?" class="link blue_link" }}
      {{/modal/modal}}
    </main>
  </body>
</html>