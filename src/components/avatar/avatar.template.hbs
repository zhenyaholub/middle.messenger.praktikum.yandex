{{#if edit}}
    <div class="avatar" style="{{style}}">
      <div class="avatar__mask">Поменять<br>аватар</div>
      <input name="avatar" type="file" class="avatar__input">
        <img src="{{image}}" alt="Аватар">
      </input>
    </div>
  {{else}}
    <div class="avatar avatar__image" style="{{style}}"></div>
  {{/if}}
